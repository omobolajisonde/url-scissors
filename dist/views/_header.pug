header
  h1
    a(href="/") URL Scissors 
  unless hideNav
    nav
      ul
        unless isLoggedIn
          li
            a.link(href="/signin") Sign in
          li
            a.link(href="/signup") Sign up for free
        if isLoggedIn
          li
            a.link(href="/history") History
      if isLoggedIn
        div.account
          img(src="/avatar.png", alt="User account")
          div.account__info
            span.username #{user.firstName} #{user.lastName} 
            span.email #{user.email}
        .logout 
          button.btn(type="button", id="logout") Logout

