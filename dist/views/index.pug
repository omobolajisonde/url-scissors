extends base
block content
  main
    div.scissors(id="scissors")
      form.form(id="shortnerForm") 
        input(name="longUrl",type="text", placeholder="Enter the URL to shorten", required, autofocus="false")
        input(name="customAlias",type="text", placeholder="Customize the URL shortening (optional)", maxLength="6", autofocus="false")
        button.btn(type="submit") Click to shorten URL
      div.copy-field(id="copy-field")
    div.qr
      form.form(id="qrForm") 
        input(name="Url",type="text", placeholder="Enter the URL for QR code generation", required, autofocus="false")
        button.btn(type="submit") Click to generate QR code.
    div.qrcode(id="qrcode")

  script.
    function copyToClipboard() {
      const copyText = document.getElementById("copy-input");

      navigator.clipboard
        .writeText(copyText.value)
        .then(() => {
          alert("Text copied to clipboard!");
        })
        .catch((error) => {
          console.error("Failed to copy text: ", error);
        });
    }

    function downloadQRCode() {
      const downloadLink = document.createElement("a");
      const qrcodeImg = document.getElementById("qrcodeImg");
      downloadLink.href = qrcodeImg.src;
      downloadLink.download = "qrCode.png";
      downloadLink.click();
    }