doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Pacifico&display=swap", rel="stylesheet")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css")
    script(src="https://cdn.jsdelivr.net/npm/toastify-js")
    link(href="/style.css", rel="stylesheet")
    link(href="/responsiveness.css", rel="stylesheet")

    if script === "signup"
      script(type="module" src="/signupScript.js" defer) 
    else if script === "signin"
      script(type="module" src="/signinScript.js" defer) 
    else if script === "forgotPassword"
      script(type="module" src="/forgotPassword.js" defer)
    else if script === "resetPassword"
      script(type="module" src="/resetPassword.js" defer) 
    else 
      script(type="module" src="/index.js" defer) 
    title URL Scissors
  body
    //- Header
    include _header

    //- Content
    block content