extends base
block content
    section.urlAnalytics 
        h1 #{url.shortUrl}
        ul
            li  
                b Original URL:&nbsp;
                | #{url.longUrl}
            li  
                b Clicks:&nbsp;
                | #{url.clicks}
        h3 Clicks source
        if url.clicksSource.length
            ul
            each source in url.clicksSource.slice(-10)
                li #{source}
        else 
            p No data


            