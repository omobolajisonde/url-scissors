extends base
block content
    section.signin
        form.form__sign(id="signin") 
            h1 Welcome back, sign in
            div
                label(for="email") Email
                input(type="email", id="email", name="email", required, autofocus="false")
            div
                label(for="password") Password
                input(type="password", id="password", name="password", required, minLength="6", autofocus="false")
            div
                button(type="submit", class="btn") Sign In
                span 
                    a.link(href="/forgotpassword") Forgot password? 
                span 
                    | Do not have an account? 
                    a.link(href="/signup") Sign up

